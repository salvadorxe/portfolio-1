---
const currentPath = Astro.url.pathname;
---

<header
  class="h-16 flex justify-end items-center px-24 py-12 max-sm:px-5 max-sm:py-10 max-w-7xl w-full mx-auto"
>
  <nav>
    <ul class="flex gap-x-4">
      <li>
        <a
          href="/"
          class:list={[
            "nav-link font-regular px-14 py-4 rounded-full border border-black border-opacity-15 hover:bg-black hover:bg-opacity-5 transition-colors",
            { active: currentPath === "/" },
          ]}
        >
          Home
        </a>
      </li>
      <li>
        <a
          href="/projects"
          class:list={[
            "nav-link font-regular px-14 py-4 rounded-full border border-black border-opacity-15 hover:bg-black hover:bg-opacity-5 transition-colors",
            { active: currentPath === "/projects" },
          ]}
        >
          Projects
        </a>
      </li>
      <li>
        <a
          href="/about"
          class:list={[
            "nav-link font-regular px-14 py-4 rounded-full border border-black border-opacity-15 hover:bg-black hover:bg-opacity-5 transition-colors",
            { active: currentPath === "/about" },
          ]}
        >
          About
        </a>
      </li>
    </ul>
  </nav>
</header>

<style>
  .nav-link:hover {
    @apply bg-black bg-opacity-5;
  }
  .nav-link.active {
    @apply bg-black text-white;
  }
</style>
